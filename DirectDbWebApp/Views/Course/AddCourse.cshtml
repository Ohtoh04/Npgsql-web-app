@model Course

@{
    ViewData["Title"] = "Create Course";
}

<h1 class="mb-4">Create a New Course</h1>

<form asp-action="CreateCourse" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="Title" class="form-label">Course Title</label>
        <input type="text" class="form-control" id="Title" name="Title" asp-for="Title" required />
        <div class="invalid-feedback">
            Please provide a course title.
        </div>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea class="form-control" id="Description" name="Description" asp-for="Description" rows="3" required></textarea>
        <div class="invalid-feedback">
            Please provide a description.
        </div>
    </div>

    <div class="mb-3">
        <label for="CourseType" class="form-label">Course Type</label>
        <input type="text" class="form-control" id="CourseType" name="CourseType" asp-for="CourseType" required />
        <div class="invalid-feedback">
            Please provide a course type.
        </div>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" step="0.01" class="form-control" id="Price" name="Price" asp-for="Price" />
    </div>

    <div class="mb-3">
        <label for="Duration" class="form-label">Duration (hours:minutes:seconds)</label>
        <input type="time" step="1" class="form-control" id="Duration" name="Duration" asp-for="Duration" />
    </div>

    <div class="mb-3">
        <label for="Rating" class="form-label">Rating</label>
        <input type="number" step="0.1" class="form-control" id="Rating" name="Rating" asp-for="Rating" />
    </div>

    <button type="submit" class="btn btn-primary">Create Course</button>
</form>

<script>
    // Bootstrap validation
    (function () {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');

        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

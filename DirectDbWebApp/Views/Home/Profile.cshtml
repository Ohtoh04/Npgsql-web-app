@model DirectDbWebApp.Domain.DbUser

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-header text-center">
            <h3>User Profile</h3>
        </div>
        <div class="card-body">
            <div class="d-flex flex-column align-items-center">
                @if (Model.ProfilePicture != null)
                {
                    <img src="@Model.ProfilePicture" class="rounded-circle mb-3" alt="Profile Picture" style="width: 150px; height: 150px; object-fit: cover;">
                }
                else
                {
                    <div class="rounded-circle bg-secondary mb-3" style="width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                        <span class="text-white fs-1">@Model.Username</span>
                    </div>
                }
                <h4>@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">@Model.Role</p>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <h6>Username:</h6>
                    <p>@Model.Username</p>
                </div>
                <div class="col-md-6">
                    <h6>Email:</h6>
                    <p>@Model.Email</p>
                </div>
            </div>
            <div class="mb-3">
                <h6>Bio:</h6>
                <p>@(string.IsNullOrEmpty(Model.Bio) ? "No bio available." : Model.Bio)</p>
            </div>
            <div>
                <h6>Date Registered:</h6>
                <p>@Model.DateRegistered.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
    </div>
</div>